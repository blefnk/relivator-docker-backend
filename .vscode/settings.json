{
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.associations": {
    "requirements.txt": "properties",
    "*.ignore": "plaintext",
    "*.toml": "properties",
    "*.txt": "plaintext"
  },
  "editor.tabSize": 2,
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "markdownlint.config": {
    "MD033": {
      "allowed_elements": [
        "a",
        "code",
        "details",
        "h3",
        "hr",
        "img",
        "li",
        "ol",
        "p",
        "pre",
        "strong",
        "summary",
        "ul"
      ]
    }
  },
}
